@model TransactionAPI.ViewModels.Transaction.TransactionListViewModel
<!-- Icon Cards-->
<div class="row employee-benefits-homepage-icon-row">
	<div class="col-xl-3 col-sm-6 mb-3">
		<div class="card text-white bg-primary o-hidden h-100">
			<div class="card-body">
				<div class="card-body-icon">
					<i class="fa fa-fw fa-dollar"></i>
				</div>
				<div class="span6">
					Total Monthly Income
				</div>
				<div class="span6">
					<div class="pull-right">
						@Model.TotalMonthlyIncome
					</div>
				</div>
				<div class="mr-5"></div>
				<div class="mr-5"></div>
			</div>
			<a class="card-footer text-white clearfix small z-1" href="#">
				<span class="float-right"></span>
			</a>
		</div>
	</div>
	<div class="col-xl-3 col-sm-6 mb-3">
		<div class="card text-white bg-warning o-hidden h-100">
			<div class="card-body">
				<div class="card-body-icon">
					<i class="fa fa-fw fa-child"></i>
				</div>
				<div class="span6">Total Monthly Expenses</div>
				<div class="span6">
					<div class="pull-right">
						@Model.TotalMonthlyExpenses
					</div>
				</div>
			</div>
			<a class="card-footer text-white clearfix small z-1" href="#">
				<span class="float-right"> </span>
			</a>
		</div>
	</div>
</div>

<div class="card-body">
	<div class="h1">
		<h1>Transaction List</h1>
	</div>
	<p>
		Examine the transaction list below, or view the breakdown of spending by category.
	</p>
	<div class="row employee-benefits-button-row">
		
	</div>
</div>

<!-- Example DataTables Card-->
<div class="card mb-3">
	<div class="card-header">
		<i class="fa fa-table"></i> Transactions
	</div>

	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-bordered" id="dataTable" cellspacing="0">
				<thead>
					<tr>
						<th>Date Posted</th>
						<th>Amount</th>
						<th>Category</th>
						<th>Transaction ID</th>
						<th>Status</th>
					</tr>
				</thead>
				<tbody>

					@foreach (var transaction in Model.TransactionList.Transactions)
					{
					<tr>
						<td>@transaction.DatePosted.ToString("MM dd yyyy")</td>
						<td>$@transaction.Amount</td>
						<td>@transaction.Category</td>
						<td>@transaction.ID</td>
						<td>@transaction.StatusForUI</td>
					</tr>
					}

				</tbody>
			</table>
		</div>
	</div>
	<div class="card-body">
		<div>
			<h2>Spending By Category</h2>
		</div>
		<div class="table-responsive">
			<table class="table table-bordered" id="dataTable" cellspacing="0">
				<thead>
					<tr>
						<th>Category</th>
						<th>Total Spending</th>
					</tr>
				</thead>
				<tbody>

					@foreach (var categorySum in Model.CategorySummaries)
					{
					<tr>
						<td>@categorySum.CategoryName</td>
						<td>@categorySum.Sum</td>
					</tr>
					}

				</tbody>
			</table>
		</div>
	</div>
	<div class="card-footer small text-muted">All currency amounts are in USD.</div>
</div>
